{
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Path": "pycodestyle",

    "languageserver": {
        "clangd": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
